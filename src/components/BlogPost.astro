---
import BlogTop from "@/components/BlogTop.astro";
import BlogBottom from "@/components/BlogBottom.astro";
import type { ImageMetadata } from "astro";
type Props = {
  title: string;
  link: string;
  location?: string[];
  tags?: string[];
  image?: ImageMetadata;
  alt?: string;
};
const { title, link, location, tags, image, alt } = Astro.props;
---

<div class="inline-block flex-1 max-w-full space-y-2">
  <BlogTop
    link={link}
    title={title}
    location={location}
    image={image}
    alt={alt}
  />
  <BlogBottom tags={tags || []} title={title} />
  <hr />
</div>
